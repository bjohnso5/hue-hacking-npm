    "@typescript/native-preview": "^7.0.0-dev.20250805.1",
    "ava": "^6.4.1",
    "moxios": "^0.4.0",
    "rimraf": "^6.0.1",
    "rxjs": "^7.8.2",
    "tap-xunit": "^2.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
