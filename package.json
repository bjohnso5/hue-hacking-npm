{
  "name": "hue-hacking-node",
  "version": "1.11.0",
  "description": "Utility to control Philips Hue light bulbs",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bjohnso5/hue-hacking-npm.git"
  },
  "scripts": {
    "test": "tsgo && ava",
