{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "lib": ["es2015"],
    "types": ["node"]
  },
  "angularCompilerOptions": {
    "genDir": "compiled"
  },
  "exclude": ["node_modules", "dist/**", "coverage", "gulpfile.js"],
  "typeAcquisition": {
    "enable": true
  }
}
