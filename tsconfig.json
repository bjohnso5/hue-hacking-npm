{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "inlineSources": true,
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2015",
        "types": [
            "node"
        ]
    },
    "exclude": [
        "node_modules",
        "dist/**",
        "coverage",
        "gulpfile.js"
    ],
    "typeAcquisition": {
        "enable": true
    }
}