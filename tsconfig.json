{
  "compilerOptions": {
    "module": "CommonJS",
    "noImplicitAny": false,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "Node",
    "target": "ES5",
    "lib": ["es2015"],
    "types": ["node"],
    "outDir": "dist/",
  },
  "angularCompilerOptions": {
    "genDir": "compiled"
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules/**", "dist/**", "coverage", "gulpfile.js"],
  "typeAcquisition": {
    "enable": true
  }
}
